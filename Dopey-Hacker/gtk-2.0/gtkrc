# Dopey Hacker by Roman S. Collins

# color scheme
gtk_color_scheme = "text_color:#FFFFFF\background_color:#00000A\border_color:#050A16\focused_text_color:#86FF72\unfocused_text_color:#C3C3C3\inactive_text_color:#47CCFF\urgent_text_color:#DC5555\link_color:#7364FF"

style "murrine-default" {

    xthickness= 1
    ythickness= 1

    fg[NORMAL]= @text_color
    fg[PRELIGHT]= lighten (0.7, @focused_text_color)
    fg[SELECTED]= @focused_text_color
    fg[ACTIVE]= @inactive_text_color
    fg[INSENSITIVE]= @unfocused_text_color

    bg[NORMAL]= @background_color
    bg[PRELIGHT]= @background_color
    bg[SELECTED]= @background_color
    bg[ACTIVE]= @background_color
    bg[INSENSITIVE]= @background_color

    base[NORMAL]= lighten (0.5, @background_color)
    base[PRELIGHT]= lighten (0.5, @background_color)
    base[SELECTED]= lighten (0.5, @background_color)
    base[ACTIVE]= lighten (0.5, @background_color)
    base[INSENSITIVE]= lighten (0.5, @background_color)

    text[NORMAL]= @text_color
    text[PRELIGHT]= @focused_text_color
    text[SELECTED]= @focused_text_color
    text[ACTIVE]= @inactive_text_color
    text[INSENSITIVE]= @unfocused_text_color

    engine "murrine" {
    }
}

# thickness
style "murrine-wide" {
    xthickness= 2
    ythickness= 2

}

style "murrine-wider" {
    xthickness= 3
    ythickness= 3

}

style "murrine-thin" {
    xthickness= 0
    ythickness= 0

}

# some other widget properties
style "murrine-button" = "murrine-wide" {

    bg[NORMAL]= @border_color
    bg[PRELIGHT]= lighten (0.3, @border_color)
    bg[SELECTED]= lighten (0.7, @border_color)
    bg[ACTIVE]= lighten (0.7, @border_color)
    bg[INSENSITIVE]= shade (0.5, @unfocused_text_color)

    engine "murrine"{
    }
}

