    bg[NORMAL]= @border_color
    bg[PRELIGHT]= lighten (0.3, @border_color)
    bg[SELECTED]= lighten (0.7, @border_color)
    bg[ACTIVE]= lighten (0.7, @border_color)
    bg[INSENSITIVE]= shade (0.5, @unfocused_text_color)

}

style "murrine-progressbar" = "murrine-thin" {

    bg[NORMAL]= @border_color
    bg[PRELIGHT]= shade (0.3, @focused_text_color)
    bg[SELECTED]= shade (0.7, @focused_text_color)
    bg[ACTIVE]= @focused_text_color
    bg[INSENSITIVE]= shade (0.5, @unfocused_text_color)

    fg[PRELIGHT]= @focused_text_color

    engine "murrine" {
        roundness = 2
        border_shades = { 1.2, 1.2 }
        trough_border_shades = { 0.8, 0.8 }
    }
}

style "murrine-treeview-header" = "murrine-button" {
    engine "murrine" {
        roundness = 0
    }
}

style "murrine-treeview" {
    engine "murrine" {
        roundness = 0
    }
}

style "murrine-frame-title" {
    fg[NORMAL] = @background_color
}

style "murrine-tooltips" {
    xthickness = 3
    ythickness = 3

    bg[NORMAL] = @background_color
    bg[SELECTED] = @tooltip_bg_color

    fg[NORMAL] = @focused_text_color

    engine "murrine" {
        textstyle = 0
        roundness = 1
        rgba = FALSE
    }
}

