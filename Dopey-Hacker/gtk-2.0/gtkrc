# Panels

style "murrine-panel" = "murrine-thin" {
    xthickness = 2

    bg[NORMAL]= @border_color
    bg[PRELIGHT]= @border_color
    bg[SELECTED]= @border_color
    bg[ACTIVE]= @border_color
    bg[INSENSITIVE]= @border_color

    fg[NORMAL]= @text_color
    fg[PRELIGHT]= lighten (0.7, @focused_text_color)
    fg[SELECTED]= @focused_text_color
    fg[ACTIVE]= @inactive_text_color
    fg[INSENSITIVE]= @unfocused_text_color

    base[NORMAL] = @border_color
    base[PRELIGHT] =  @border_color
    base[SELECTED] =  @border_color
    base[ACTIVE] = @border_color
    base[INSENSITIVE] = @border_color

    text[NORMAL] = @text_color
    text[PRELIGHT] = lighten (0.7, @focused_text_color)
    text[SELECTED] = @focused_text_color
    text[ACTIVE] = @inactive_text_color
    text[INSENSITIVE] = @unfocused_text_color

    engine "murrine" {
        roundness = 0
        contrast = 0.0
    }
}

