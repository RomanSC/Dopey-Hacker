# Menus

style "murrine-menu" = "murrine-thin" {
    fg[NORMAL]= @text_color
    fg[PRELIGHT]= lighten (0.7, @focused_text_color)
    fg[SELECTED]= @focused_text_color
    fg[ACTIVE]= @inactive_text_color
    fg[INSENSITIVE]= @unfocused_text_color

    bg[NORMAL]= @background_color
    bg[PRELIGHT]= @background_color
    bg[SELECTED]= @background_color
    bg[ACTIVE]= @background_color
    bg[INSENSITIVE]= @background_color

    text[NORMAL]= @text_color
    text[PRELIGHT]= @focused_text_color
    text[SELECTED]= @focused_text_color
    text[ACTIVE]= @inactive_text_color
    text[INSENSITIVE]= @unfocused_text_color

    engine "murrine" {
        roundness = 0
    }
}

style "murrine-menu-item" = "murrine-wider" {
    bg[PRELIGHT] = @selected_bg_color
    bg[SELECTED] = @selected_bg_color
    bg[ACTIVE] = @selected_bg_color

    fg[NORMAL] = @menu_fg_color # Fix for XFCE menu text
    fg[PRELIGHT] = @selected_fg_color
    fg[SELECTED] = @selected_fg_color
    fg[ACTIVE] = @selected_fg_color
    fg[INSENSITIVE] = mix (0.5, @menu_bg_color, @menu_fg_color)

    engine "murrine" {
        textstyle = 0
        border_shades = { 1.2, 1.2 }
    }
}

style "murrine-separator-menu-item" = "murrine-thin" { }

